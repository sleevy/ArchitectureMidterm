<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.georgiasouthern.cr04956.architecturemidterm.MainActivity">

    <ImageView
        app:srcCompat="@drawable/emptyBoard"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="58dp"
        android:id="@+id/board0"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_name" />

    <ImageView
        app:srcCompat="@drawable/emptyBoard"
        android:id="@+id/board2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/board0"
        android:layout_alignParentEnd="true" />

    <ImageView
        app:srcCompat="@drawable/emptyBoard"
        android:id="@+id/board4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/board3"
        android:layout_alignStart="@+id/board1" />

    <ImageView
        app:srcCompat="@drawable/emptyBoard"
        android:id="@+id/board5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/board4"
        android:layout_alignParentEnd="true" />

    <ImageView
        app:srcCompat="@drawable/emptyBoard"
        android:layout_marginTop="22dp"
        android:id="@+id/board6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/board3"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/emptyBoard"
        android:id="@+id/board7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/board6"
        android:layout_alignStart="@+id/board4" />

    <ImageView
        app:srcCompat="@drawable/emptyBoard"
        android:id="@+id/board8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/board7"
        android:layout_alignParentEnd="true" />

    <ImageView
        app:srcCompat="@drawable/emptyBoard"
        android:id="@+id/board1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/board0"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@drawable/emptyBoard"
        android:id="@+id/board3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/board0"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/x_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtStatus"
        android:gravity="center_horizontal"
        android:layout_above="@+id/board1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRestart"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/board7"
        android:layout_alignStart="@+id/board7" />
</RelativeLayout>
